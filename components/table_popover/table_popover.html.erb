<% set_default("type", null); %>
<% set_default("name", null); %>

<div class="table_popover">
  <% if (type === "string") { %>
    <a class="string option" data-op="$regex">
      Add equals filter
    </a>
    <a class="string option" data-op="$regexv">
      Add !equals filter
    </a>
  <% } %>

  <% if (type === "integer") { %>
    <a class="integer option" data-op="$gt">
      Add greater than filter
    </a>
    <a class="integer option" data-op="$lt">
      Add less than filter
    </a>
    <a class="integer option" data-op="$ne">
      Add not equals filter
    </a>

    <hr />

    <a class="view" data-view="dist">
      View distribution
    </a>

    <a class="view" data-view="time">
      View over time
    </a>
  <% } %>

  <hr />

  <a class="view" data-view="samples">
    View samples
  </a>

  <a class="view" data-view="time_count">
    View count over time
  </a>
</div>
